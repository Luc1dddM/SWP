            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</head>
<body>
    <nav>
        <div class="icon-content">
            <span><i class="fa-solid fa-user"></i>User Profile</span>
        </div>
        <div class="link-content">
            <span><a href="./dashboard.html">Dashboard</a><i class="fa-solid fa-angle-right"></i>User Profile</span>
        </div>
    </nav>
    <div class="main-container content">
        <div class="content-search">
            <div>
                <h3>User Profile</h3>
            </div>
        </div>
       
        <div>
            <form enctype="multipart/form-data" method="post" asp-action="EditProfile">
                <div class="row d-flex justify-content-around m-4">
                    <div class="col-md-3">
                        <div class="p-2 bg-primary text-white text-center">Picture Profile</div>
                        <div class="border">
                            <div class="text-center mt-3">
                                <img style="max-width: 190px;" class="rounded-circle border img-fluid" src="~/img/@Model.img" alt="">
                            </div>
                            <div class="input-group">
                                <div class="custom-file m-3">
                                    <input type="file" name="fileImg" class="upload-box custom-file-input" >
                                    <label class="custom-file-label" for="">Choose file</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="p-2 bg-primary text-white text-center">User Detail</div>
                        <div class="p-4 border">
                            <div class="form-group">
                                <label for="fullname">Full Name</label>
                                <input type="text" name="fullname" value="@Model.fullName" class="form-control" id="" placeholder="Enter your Full Name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" name="email" value="@Model.email" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="phone number">Phone Number</label>
                                <input type="text" name="phone_number" value="@Model.phone_number" class="form-control" id="" placeholder="Enter Phone Number">
                            </div>
                            <div class="d-flex justify-content-center"><button type="submit" class="btn btn-primary" onclick="submitCustomerProfile()">Submit</button></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            // jQuery for toggle sub menus
            $('.sub-btn').click(function () {
                $(this).next('.sub-menu').slideToggle();
                $(this).find('.dropdown').toggleClass('rotate');
            });

            $('.sub-btn-avatar').click(function () {
                $(this).next('.sub-menu-avatar').slideToggle();
                $(this).find('.dropup').toggleClass('flip');
            });

            // jQuery for expand and collapse the sidebar
            $('.menu-bar').click(function () {
                $('.side-bar').addClass('active');
                $('.menu-bar').css("visibility", "hidden");
            });

            $('.close-btn').click(function () {
                $('.side-bar').removeClass('active');
                $('.menu-bar').css("visibility", "visible");
            });
        });

        function menuToggle() {
            const toggleMenu = document.querySelector('.menu-profile');
            toggleMenu.classList.toggle('active');
        }
        function submitCustomerProfile() {
            let text = "Do you want to submit this form?";
            if (confirm(text) == true) {
                

            } else {
                alert("You canceled!");
            }
        }

    </script>
</body>

</html>
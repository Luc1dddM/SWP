@{
    ViewData["Title"] = "view";
    ViewData["direction"] = "Appointment List";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    @model List<Appointment>

}

<div class="list-appointment__container">
    <div class="row list-appointment__header">
        <h2 class="header__title">Appointment List</h2>
        <button class="">Add New</button>
    </div>

    <div class="row list-appointment__title--container">
        <h4 class="col-1 list-appointment__title">ID</h4>
        <h4 class="col list-appointment__title">Description</h4>
        <h4 class="col list-appointment__title">Time Arrived</h4>
        <h4 class="col list-appointment__title">Created</h4>
        <h4 class="col list-appointment__title">Customer</h4>
    </div>

    <div class="list-appointment__item--container">
        @foreach (var @appointment in @Model)
        {
            <div class="row list-appointment__item">
                <p class="col-1 list-appointment__item--id">@appointment.appointmentID</p>
                <p class="col list-appointment__item--description">@appointment.description</p>
                <p class="col list-appointment__item--time-arrived">@appointment.timeArrived</p>
                <p class="col list-appointment__item--created">@appointment.createdAt</p>
                <p class="col list-appointment__item--customer">@appointment.customer.fullName</p>
            </div>
            <div class="row appointment-detail__container">

                @foreach(var @appointmentDetail in @appointment.details)
                {
                <div class="appointment-detail__item">
                    <img src="~/img/oilfilter-4640192-1@2x.png" class="appointment-detail__item--img">
                    <p class="appointment-detail__item--name">@appointmentDetail.task.taskName</p>
                </div>
                }
            </div>
        }
    </div>
</div>


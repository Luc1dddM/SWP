@{

    IHttpContextAccessor contx = new HttpContextAccessor();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/styleindex.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
</head>

<body>
    <header class="bg-white">
        <div class="row flex-center">
            <div class="col-md-6 menu-bar">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div class=" col-md-6 profile">
                <div class="avatar">
                    <img alt="" src="~/img/avatar.png" />
                </div>
                <div class="name">John Doe</div>
                <div class="arrow-down" onclick="menuToggle();">
                    <a class="sub-btn-avatar"> <i class="fa-solid fa-angle-down dropup"></i></a>
                    <div class="menu-profile">
                        <ul>
                            <li><a href="/Profile/EditProfile"><i class="fa-solid fa-user"></i>Profile</a></li>
                            <hr>
                            <li> <a href="/Home/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="side-bar">
            <div class="menu">
                <div class="brand"> <img alt="" src="./img/logo.png" /><a href="#" class="px-2">Garage Nhà Làm</a><i
                        class="fa-solid fa-xmark close-btn"></i></div>
    
                <div class="item"><i class="fa-solid fa-gauge"></i><a href="./dashboard.html">Dashboard</a></div>

                @if (contx.HttpContext.Session.GetString("role") == "admin")
                {
                    <div class="item"><i class="fa-solid fa-user-tie"></i><a href="#">Customer</a></div>

                    <div class="item"><i class="fa-solid fa-screwdriver-wrench"></i><a href="/task/ListOfServices">Services</a></div>

                    <div class="item"><i class="fa-solid fa-wrench"></i><a href="#">Components</a></div>

                    <div class="item"><i style="font-size: 20px;" class="fa-solid fa-warehouse"></i><a href="#">Components Category</a></div>

                    <div class="item"><i class="fa-solid fa-file-signature"></i><a href="#">Appointments</a></div>

                    <div class="item"><i class="fa-solid fa-briefcase"></i><a href="#">Work Order</a></div>

                    <div class="item">
                        <a class="sub-btn ">
                            <i class="fa-solid fa-flag"></i>Reports<i class="fas fa-angle-right dropdown"></i>
                        </a>
                        <div class="sub-menu">
                            <div class="small-menu">
                                <a href="#" class="sub-item"><i class="fa-solid fa-chart-pie"></i>Pie Chart</a>
                            </div>
                            <div class="small-menu">
                                <a href="#" class="sub-item">
                                    <i class="fa-solid fa-chart-simple"></i>Bar
                                    Chart
                                </a>
                            </div>

                        </div>
                    </div>

                    <div class="item"><i class="fa-solid fa-user"></i><a href="#">Team member</a></div>

                    <div class="item"><i style="font-size: 20px;" class="fa-solid fa-users"></i><a href="#">Team leader</a></div>
                }

                else if(contx.HttpContext.Session.GetString("role")  == "leader"){
                    <div class="item"><i class="fa-solid fa-file-signature"></i><a href="#">Appointments</a></div>

                    <div class="item"><i class="fa-solid fa-briefcase"></i><a href="#">Work Order</a></div>

                    <div class="item"><i class="fa-solid fa-user"></i><a href="#">Team member</a></div>

                    <div class="item"><i style="font-size: 20px;" class="fa-solid fa-users"></i><a href="#">Team leader</a></div>
                }

                else if (contx.HttpContext.Session.GetString("role") == "member")
                {

                    <div class="item"><i class="fa-solid fa-briefcase"></i><a href="#">Work Order</a></div>

                    <div class="item"><i class="fa-solid fa-user"></i><a href="#">Team member</a></div>
                }

                
            </div>
        </div>
    </header>
    <nav>
        <div class="icon-content">
            <span>@ViewBag.direction</span>
            
        </div>
        <div class="link-content">
            <span>@ViewBag.direction<i class="fa-solid fa-angle-right"></i><a href="Home">Home</a></span>
        </div>
    </nav>
    <div class="main-container">
        @RenderBody()
    </div>
        
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script type="text/javascript">

        @if (IsSectionDefined("Javascript"))
        {
            @RenderSection("Javascript", required: false)
        }

        $(document).ready(function () {
            //jquery for toggle sub menus
            $('.sub-btn').click(function () {
                $(this).next('.sub-menu').slideToggle();
                $(this).find('.dropdown').toggleClass('rotate');
            });

            $('.sub-btn-avatar').click(function () {
                $(this).next('.sub-menu-avatar').slideToggle();
                $(this).find('.dropup').toggleClass('flip');
            });

            //jquery for expand and collapse the sidebar
            $('.menu-bar').click(function () {
                $('.side-bar').addClass('active');
                $('.menu-bar').css("visibility", "hidden");
            });

            $('.close-btn').click(function () {
                $('.side-bar').removeClass('active');
                $('.menu-bar').css("visibility", "visible");
            });
        });
        function menuToggle() {
            const toggleMenu = document.querySelector('.menu-profile');
            toggleMenu.classList.toggle('active')
        }

    </script>
</body>

</html>
@using SWP_CarService_Final.Services;
@using SWP_CarService_Final.Areas.User.Models;

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
   @model User
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add A New Team </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    <nav>
        <div class="icon-content">
            <span><i class="fa-solid fa-user"></i>User Profile</span>
        </div>
        <div class="link-content">
            <span><a href="./dashboard.html">Dashboard</a><i class="fa-solid fa-angle-right"></i>User Profile</span>
        </div>
    </nav>
    <div class="main-container content">
        <div class="content-search">
            <div>
                <h3>User Profile</h3>
            </div>
        </div>

        <div>
            <form id="editProfileUser" enctype="multipart/form-data" method="post" asp-action="EditProfileUser">
                <div class="row d-flex justify-content-around m-4">
                    <div class="col-md-3">
                        <div class="p-2 bg-primary text-white text-center">Picture Profile</div>
                        <div class="border">
                            @* <div class="text-center mt-3">
                                <img style="max-width: 190px;" class="rounded-circle border img-fluid" src="" alt="">
                            </div> *@

                        </div>
                        <div class="input-group">
                            <div class="form-group border p-1">
                                <input type="file" class="form-control-file" id="exampleFormControlFile1">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="p-2 bg-primary text-white text-center">User Detail</div>
                        <div class="p-4 border">
                            <div class="form-group">
                                <label for="fullname">Full Name</label>
                                <input type="text" name="User_fullname" value="@Model.User_fullname.Trim()" class="form-control" id="" placeholder="Enter your Full Name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" name="email" value="@Model.email.Trim()" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="phone number">Phone Number</label>
                                <input type="text" name="phone_number" value="@Model.phone_number.Trim()" class="form-control" id="" placeholder="Enter Phone Number">
                            </div>
                            <div class="d-flex justify-content-center"><button type="submit" class="btn btn-primary" onclick="submitCustomerProfile()">Submit</button></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <style>
            label.error {
                color: red;
                width: 100%;
                text-align: left;
                display: block;
                padding-top: 5px;
            }
        </style>
    </div>
    
</body>

</html>

